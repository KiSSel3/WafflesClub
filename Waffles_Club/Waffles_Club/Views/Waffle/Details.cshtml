@model WaffleDetailsViewModel

<div class="container rounded-3">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Waffle.ImageUrl" class="img-fluid rounded-3">
        </div>
        <div class="col-md-6 rounded-3">
            <h1 class="mt-3">@Model.Waffle.Name</h1>
            <p class="lead">@Model.Waffle.Description</p>
            <ul class="list-unstyled">
                <li>Тип: @Model.WaffleType.Name</li>
                <li>Начинка: @Model.FillingType.Name</li>
                <li>Количество в упаковке: @Model.Waffle.CountInPackage</li>
                <li>Цена: @Model.Waffle.Price $</li>
                <li>Вес: @Model.Waffle.Weight г.</li>
            </ul>
            <a asp-controller="Waffle" asp-action="Index" class="btn btn-primary">Назад</a>
            <a asp-controller="Cart" asp-action="AddWaffleToCart" asp-route-waffleId="@Model.Waffle.Id" class="btn btn-primary m-1">
                <i class="fas fa-shopping-cart"></i> Добавить в корзину
            </a>
        </div>
    </div>
</div>